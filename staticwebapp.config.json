{
  "routes": [
    {
      "route": "/assets/*.js",
      "headers": {
        "content-type": "text/javascript; charset=utf-8"
      }
    },
    {
      "route": "/assets/*.css", 
      "headers": {
        "content-type": "text/css; charset=utf-8"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "*.{css,scss,js,png,gif,ico,jpg,svg}"]
  },
  "mimeTypes": {
    ".js": "text/javascript",
    ".mjs": "text/javascript", 
    ".css": "text/css"
  }
}